{
  "name": "moduleia",
  "version": "1.0.0",
  "description": "Application de flashcards intelligente",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "build": "cd frontend && npm install --no-workspaces --include=dev && npm run build",
    "vercel-build": "cd frontend && npm install --no-workspaces --include=dev && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@vercel/node": "^3.0.7"
  }
}

